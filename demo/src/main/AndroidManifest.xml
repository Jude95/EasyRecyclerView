<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.jude.dome" >
    <uses-permission android:name="android.permission.INTERNET"/>
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE"/>

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >

        <activity android:name=".MainActivity"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".loadmore.RefreshAndMoreActivity"
            android:label="@string/refresh_and_more">
        </activity>
        <activity
            android:name=".multistyle.MultiStyleActivity"
            android:label="@string/multi_style">
        </activity>
        <activity android:name=".header.HeaderFooterActivity"
            android:label="@string/header_and_footer">
        </activity>
        <activity android:name=".collapsing.CollapsingActivity"
            android:theme="@style/AppTheme.NoActionBar"
            android:label="@string/collapsing"/>
        <activity android:name=".staggeredgrid.StaggeredGridActivity"
            android:label="@string/staggered_grid"/>
    </application>

</manifest>
